@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center justify-content-end gap-3">
            <button class="btn btn-sm btn-outline-secondary"
                    @onclick="ToggleTheme">
                @(isDark ? "☀ Light" : "🌙 Dark")
            </button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isDark = false;

    private async Task ToggleTheme()
    {
        isDark = !isDark;

        await JS.InvokeVoidAsync(
            "document.body.setAttribute",
            "data-bs-theme",
            isDark ? "dark" : "light"
        );
    }
}
