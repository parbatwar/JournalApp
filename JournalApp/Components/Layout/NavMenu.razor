@inject Session Session
@inject NavigationManager Nav


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Daily Journal</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable flex-fill d-flex" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column flex-fill">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                 New Entry
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="all-entries">
                 All Entries
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                 Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calender-view">
                 Calender View
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-auto pt-3">
            <button class="logout-link"
                    @onclick="Logout">
                Logout
            </button>
        </div>


    </nav>
</div>


@code {
    void Logout()
    {
        Session.CurrentUser = null;
        Nav.NavigateTo("/login", true);
    }
}
