@page "/all-entries"
@layout MainLayout
@using JournalApp.Models
@inject Session Session
@inject NavigationManager Nav
@inject IEntryService EntryService

<div class="page-header">
    <h1>All Entries</h1>
    <p>View your journal history</p>
</div>

<div class="card">

    <table class="table">
        <thead>
            <tr>
                <th>S.No.</th>
                <th>Title</th>
                <th>Mood</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = (CurrentPage - 1) * PageSize + 1;
            }

            @foreach (var entry in PagedEntries)
            {
                <tr>
                    <td>@i</td>
                    <td>@entry.Title</td>
                    <td>
                        @(entry.EntryMoods.Any()
                                            ? entry.EntryMoods.First().Mood?.MoodName
                                            : "Not set")
                    </td>
                    <td>@entry.Tag?.TagName</td>
                    <td>@entry.EntryDate.ToString("yyyy-MM-dd")</td>
                </tr>
                i++;
            }
        </tbody>
    </table>

    <!-- SIMPLE BOOTSTRAP PAGINATION -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">

            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="#"
                   @onclick="PrevPage"
                   @onclick:preventDefault>
                    Previous
                </a>
            </li>

            <li class="page-item active">
                <a class="page-link">
                    @CurrentPage
                </a>
            </li>

            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="#"
                   @onclick="NextPage"
                   @onclick:preventDefault>
                    Next
                </a>
            </li>

        </ul>
    </nav>

</div>

@code {
    List<JournalEntry> Entries = new();
    List<JournalEntry> PagedEntries = new();

    int CurrentPage = 1;
    int PageSize = 5;
    int TotalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        if (Session.CurrentUser == null)
        {
            Nav.NavigateTo("/login");
            return;
        }

        Entries = await EntryService.GetEntries(Session.CurrentUser.UserId);

        TotalPages = (int)Math.Ceiling(
            (double)Entries.Count / PageSize
        );

        LoadPage();
    }

    void LoadPage()
    {
        PagedEntries = Entries
            .Skip((CurrentPage - 1) * PageSize)
            .Take(PageSize)
            .ToList();
    }

    void NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
            LoadPage();
        }
    }

    void PrevPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
            LoadPage();
        }
    }
}
