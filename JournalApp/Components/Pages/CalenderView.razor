@page "/calender-view"
@layout MainLayout
@inject Session Session
@inject NavigationManager Nav

<div class="page-header">
    <h1>Calendar</h1>
    <p>Select a date to view or write your journal</p>
</div>

<div class="calendar-card">
    <div class="calendar-row">

        <div class="calendar-field">
            <label>Select date</label>
            <input type="date" class="calendar-picker" />
        </div>

        <button class="go-btn" type="button">
            Go
        </button>

    </div>
</div>

<style>
.page-header {
    margin-bottom: 32px;
}
.page-header h1 {
    font-weight: 600;
    color: var(--bs-body-emphasis);
}
.page-header p {
    color: var(--bs-secondary-color);
    font-size: 0.95rem;
}

.calendar-card {
    background: var(--bs-card-bg);
    padding: 32px 6px;
    border-radius: 16px;
    max-width: 400px;
}

.calendar-row {
    display: flex;
    gap: 14px;
    align-items: flex-end;
}

.calendar-field {
    flex: 1;
}
.calendar-field label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--bs-body-color);
}

.calendar-picker {
    width: 100%;
    padding: 14px 16px;
    font-size: 1rem;
    border-radius: 12px;
    border: 1px solid var(--bs-border-color);
    background: var(--bs-body-bg);
    color: var(--bs-body-color);
}

.go-btn {
    padding: 14px 24px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(
        180deg,
        #4b1d63,
        #7a2d6c
    );
    color: white;
    font-weight: 600;
    cursor: pointer;
}
.go-btn:hover {
    opacity: 0.9;
}
</style>

@code {
    protected override void OnInitialized()
    {
        if (Session.CurrentUser == null)
            Nav.NavigateTo("/login");
    }
}